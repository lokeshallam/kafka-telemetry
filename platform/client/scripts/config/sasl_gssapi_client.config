bootstrap.servers=kafka1.kafka-network:29093,kafka2.kafka-network:29094,kafka3.kafka-network:29095
security.protocol=SASL_SSL
# SSL
ssl.keystore.location=/var/ssl/private/client.kafka-network.keystore.jks
ssl.keystore.password=serverpassword
ssl.truststore.location=/var/ssl/private/client.kafka-network.truststore.jks
ssl.truststore.password=serverpassword
# SASL Auth
sasl.mechanism=GSSAPI
sasl.kerberos.service.name=kafka
sasl.jaas.config=com.sun.security.auth.module.Krb5LoginModule required \
    useKeyTab=true \
    storeKey=true \
    keyTab="/etc/security/keytabs/client.keytab" \
    principal="client@EXAMPLE.COM";
# producer settings
acks=all
# schema registry settings
schema.registry.url: https://schema1:8081
schema.registry.ssl.keystore.location: /var/ssl/private/client.kafka-network.keystore.jks
schema.registry.ssl.keystore.password: serverpassword
schema.registry.ssl.truststore.location: /var/ssl/private/client.kafka-network.truststore.jks
schema.registry.ssl.truststore.password: serverpassword

# zookeeper settings
zookeeper.connect: zoo1:2181,zoo2:2182,zoo3:2183
zookeeper.clientCnxnSocket: org.apache.zookeeper.ClientCnxnSocketNetty
zookeeper.ssl.client.enable: true
zookeeper.ssl.keystore.location: /var/ssl/private/kafka1.kafka-network.keystore.jks
zookeeper.ssl.keystore.password: serverpassword
zookeeper.ssl.truststore.location: /var/ssl/private/kafka1.kafka-network.truststore.jks
zookeeper.ssl.truststore.password: serverpassword
zookeeper.sasl.client: true
zookeeper.sasl.client.username: client
zookeeper.set.acl: true
